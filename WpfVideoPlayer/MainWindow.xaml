<Window x:Class="WpfVideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vlc="LibVLCSharp.Shared"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVideoPlayer"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" 
        VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" 
        Title="MainWindow" WindowState="Maximized">
      <Grid>
            <MediaElement Name="mediaEle" Stretch="UniformToFill"   
                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch" LoadedBehavior="Manual" 
                          MediaEnded="mediaEle_MediaEnded"></MediaElement>
    </Grid>
</Window>
